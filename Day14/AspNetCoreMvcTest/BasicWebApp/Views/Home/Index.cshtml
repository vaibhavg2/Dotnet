@model Tourism.Site
<html>
    <head>
        <title>BasicWebApp</title>
    </head>
    <body>
        <h1>Our Visitors</h1>
        <table border="1">
            <tr>
                <th>Name of Visitor</th>
                <th>Number of Visits</th>
                <th>Most Recent Visit</th>
            </tr>
            @foreach (var item in Model.Visitors)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.VisitCount</td>
                    <td>@item.LastVisit</td>
                </tr>
            }
        </table>
        <p>
            <form method="post" action="/Home/Register">
                <b>Name:</b>
                <input type="text" name="person" required="required"/>
                <input type="submit" value="Register"/>
            </form>
        </p>
    </body>
</html>